{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",

    "outDir": "build/dist",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6"],
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "paths": {
      "@src/*": ["src/*"],
      "@models/*": ["src/models/*"]
    }
  },
  "exclude": ["dist", "node_modules"],
  "include": ["src"],

  "references": [{ "path": "../courses-common" }]
}
