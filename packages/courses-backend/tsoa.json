{
  "entryFile": "src/index.ts",

  "noImplicitAdditionalProperties": "throw-on-extras",
  "spec": {
    "outputDirectory": "public",
    "specVersion": 3
  },
  "ignore": ["**/node_modules/**"],

  "compilerOptions": {
    "paths": {
      "@src/*": ["src/*"],
      "@models/*": ["src/models/*"],
      "@controllers/*": ["src/controllers/*"],
      "@middlewares/*": ["src/middlewares/*"]
    }
  }
}
