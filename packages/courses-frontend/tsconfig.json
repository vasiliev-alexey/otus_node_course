{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "lib": ["esnext", "dom", "dom.iterable"],
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "allowJs": true,
    "baseUrl": "./",
    "esModuleInterop": true,

    "downlevelIteration": true,
    "skipLibCheck": true,
    "outDir": "./dist",

    "paths": {
      "@src/*": ["src/*"],
      "@css/*": ["public/*"],
      "@store/*": ["src/store/*"],
      "@services/*": ["src/services/*"]
    }
  }
}
